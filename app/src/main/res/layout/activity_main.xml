<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signup"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_margin="30dp"
        android:padding="20dp"/>
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fstnam"
        android:layout_below="@id/signup"
        android:background="#30ffffff"
        android:hint="First Name"
        android:backgroundTint="@color/black"
        android:drawableLeft="@drawable/ic_baseline_person"
        android:drawablePadding="13dp"
        android:padding="15dp"
        android:layout_margin="13dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lstnam"
        android:layout_below="@id/fstnam"
        android:background="#30ffffff"
        android:hint="Last Name"
        android:backgroundTint="@color/black"
        android:drawableLeft="@drawable/ic_baseline_person"
        android:drawablePadding="13dp"
        android:padding="15dp"
        android:layout_margin="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@id/lstnam"
        android:background="#30ffffff"
        android:hint="E-mail"
        android:backgroundTint="@color/black"
        android:drawableLeft="@drawable/ic_baseline_email"
        android:drawablePadding="13dp"
        android:padding="15dp"
        android:layout_margin="19dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gender"
        android:layout_below="@id/email"
        android:text="Gender"
        android:textSize="25dp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radiobtn"
        android:layout_below="@id/gender">


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:text="male"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="16dp"
            android:text="Female"/>

    </RadioGroup>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn"
        android:layout_below="@id/radiobtn"
        android:text="Submit"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:layout_margin="30dp"/>
</RelativeLayout>